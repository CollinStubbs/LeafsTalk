<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="collin.mobile.leafstalk.MainActivity"
    >
<LinearLayout 
    android:id="@+id/mainLay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/leafsBlue"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     >

    <TextView
        android:id="@+id/playoffIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/leafsWhite"
        android:paddingBottom="20dp"
        android:text="Are we in a playoff spot?" />

    <LinearLayout
        android:id="@+id/leafsPic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        
        android:background="@drawable/leaf"
        android:orientation="horizontal" 
        android:layout_marginBottom="20dp">
        
        <TextView
	        android:id="@+id/playoffAns"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginTop="40dp"
	        android:gravity="center"
	        android:textColor="@color/leafsBlue" />
        
    </LinearLayout>
	<View
	    android:id="@+id/v1"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/leafsWhite"
	    />
	<View
	    android:id="@+id/v2"
	    android:layout_width="match_parent"
	    android:layout_height="4dp"
	    android:background="@color/leafsBlue"
	    />
	<View
	    android:id="@+id/v3"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/leafsWhite"
	    />
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal">
	     <TextView
	        android:id="@+id/overall"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:gravity="center_horizontal"
	        android:textColor="@color/leafsWhite" />
	     <TextView
	        android:id="@+id/overallAns"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:gravity="center_horizontal"
	        android:textColor="@color/leafsWhite" />
	</LinearLayout>
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal">
	     <TextView
	        android:id="@+id/lastten"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:gravity="center_horizontal"
	        android:textColor="@color/leafsWhite" />
	     <TextView
	        android:id="@+id/lasttenans"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:gravity="center_horizontal"
	        android:textColor="@color/leafsWhite" />
	</LinearLayout>
	<View
	    android:id="@+id/v4"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:layout_marginTop="20dp"
	    android:background="@color/leafsWhite"
	    />
	<View
	    android:id="@+id/v5"
	    android:layout_width="match_parent"
	    android:layout_height="4dp"
	    android:background="@color/leafsBlue"
	    />
	<View
	    android:id="@+id/v6"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/leafsWhite"
	    />
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal">
	     <TextView
	        android:id="@+id/topPlayers"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:gravity="center_horizontal"
	        android:textColor="@color/leafsWhite" />
	     <TextView
	        android:id="@+id/topOne"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:gravity="left"
	        android:textColor="@color/leafsWhite" />
	     <TextView
	        android:id="@+id/topTwo"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:gravity="left"
	        android:textColor="@color/leafsWhite" />
	     <TextView
	        android:id="@+id/topThree"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:gravity="left"
	        android:textColor="@color/leafsWhite" />
	</LinearLayout>
	<View
	    android:id="@+id/v7"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:layout_marginTop="20dp"
	    android:background="@color/leafsWhite"
	    />
	<View
	    android:id="@+id/v8"
	    android:layout_width="match_parent"
	    android:layout_height="4dp"
	    android:background="@color/leafsBlue"
	    />
	<View
	    android:id="@+id/v9"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/leafsWhite"
	    />
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal">
	     <TextView
	        android:id="@+id/news"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:gravity="center_horizontal"
	        android:textColor="@color/leafsWhite" />
	     <Button
	        android:id="@+id/newsOne"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:background="@null"
	        android:gravity="left"
	        android:textColor="@color/leafsWhite" />
	     <Button
	        android:id="@+id/newsTwo"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:background="@null"
	        android:gravity="left"
	        android:textColor="@color/leafsWhite" />
	     <Button
	        android:id="@+id/newsThree"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:background="@null"
	        android:gravity="left"
	        android:textColor="@color/leafsWhite" />
	</LinearLayout>"
</LinearLayout>
</ScrollView>